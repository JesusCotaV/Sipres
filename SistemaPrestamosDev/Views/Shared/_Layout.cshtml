        <div class="theme-wrapper">
            <i id="themeIcon" class="bx bxs-moon theme-icon"></i>
            <p id="p1">Dark Theme</p>
            <div class="theme-btn">
                <label class="switch">
                    <input id="themeBtn" type="checkbox" onclick="toggleTheme()">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
    </section>
    <section class="home">
        @*aqui va el contenido*@
